@model FootballWeb.Models.Score

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this id: @Model.Id?</h3>
Meciurile unde sunt folosite sunt: @Model.Match.Count
<ul>
    @foreach (var meci in Model.Match)
    {

        <li> Meciul @meci.Id</li>
    }
    Aceste meciuri vor fi sterse!!!
</ul>
<div>
    <h4>Score</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HomeScore)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HomeScore)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AwayScore)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AwayScore)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
